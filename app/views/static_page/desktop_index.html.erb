<div class="main">
  <!--phoneloop-->
  <h3>RIDE A BLEEPER</h3>
  <%= image_tag('img/web/des_ride_bleeperbike.png') %>


  <!--bleeperbike-->
  <div class="bleeper" id="meet">
    <div class="bleeper_box">
      <div class="bleeper_mt">
        <h3>MEET BLEEPER</h3>

        <p>BleeperBike is comfortable and fun to ride</p>
      </div>
      <div class="bleeper_bike">
        <%= image_tag('img/web/bike.png') %>
        <ul class="lineBox">
          <li class="led">
            <p>Built in LED light</p>

            <div class="led_cover">
              <div></div>
              <div class="led_line cover"></div>
            </div>
          </li>
          <li class="brake">
            <p>Responsive brake</p>

            <div class="brake_cover">
              <div></div>
              <div class="brake_line cover"></div>
            </div>
          </li>
          <li class="hub">
            <p>Power generation hub</p>

            <div class="hub_cover">
              <div></div>
              <div class="hub_line cover"></div>
            </div>
          </li>
          <li class="seat">
            <p>Adjustable seat</p>

            <div class="seat_cover">
              <div></div>
              <div class="seat_line cover"></div>
            </div>
          </li>
          <li class="gps">
            <p>Smart lock with built in GPS</p>

            <div class="gps_cover">
              <div></div>
              <div class="gps_line cover"></div>
            </div>
          </li>
          <li class="built">
            <p>Built in LED lights</p>

            <div class="built_cover">
              <div></div>
              <div class="built_line cover"></div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>


  <!--parking_rules-->
  <div id="rules"></div>
  <div class="parkingRules">
    <div class="parking_wrap">
      <div class="rule_desc">
        <h3>PARKING STEPS</h3>
        <%= image_tag('img/web/park1.png') %>
      </div>
      <div class="rule_morality">
        <!--<p>It is essential that users respect our bike parking rules. See images below for examples of the good, the-->
        <!--bad and the ugly!</p>-->
      </div>
      <div class="rule_img">
        <%=
            # image_tag('img/web/parking_rule_web.png')
        %>
      </div>

    </div>
  </div>
