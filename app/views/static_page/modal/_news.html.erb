<% @news.each do |new| %>
    <div class="media">
      <div class="container">
        <h4 class="media-heading" style="margin-bottom: 1em;">
          <%= new.title %>
        </h4>

        <p>
          <%= new.content %>
        </p>

        <p style="font-size:  smaller; color: #818181">Posted by <%= new.author %>
          on <%= new.created_at.strftime('%B %d, %Y') %></p>
      </div>
      <% if new != @news.last %>
          <hr>
      <% end %>
    </div>
<% end %>